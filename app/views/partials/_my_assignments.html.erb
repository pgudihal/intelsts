<h1>Applications to Score</h1>
<br />
<table>
  <tr>
    <th>Project Name</th>
    <th>Field</th>
    <th>Research Score</th>
    <th>Scientific Potential</th>
    <th>Entry Score</th>
    <th></th>
    <th></th>
  </tr>

<% @assignments = @assignments.paginate :page => params[:page], :per_page => 10 %>
<% @assignments.each do |a| %>
  <tr>
    <td><%=h Application.find(a.application_id).application_name%></td>
    <td><%=h Application.find(a.application_id).field_name%></td>
    <td><%= a.research_score %></td>
    <td><%= a.scientific_potential%></td>
    <td><%= a.entry_score %></td>
    <td><%#= link_to image_tag("icons/add_dg.gif", :border => 0), new_assignment_path  %>&nbsp;</td>
    <td><%= link_to image_tag("icons/edit_dg.gif", :border => 0), edit_assignment_path(a) %>&nbsp;</td>

    <!-- TODO if can delete -->
    <%#= link_to image_tag("icons/delete_dg.gif", :border => 0), assignment_path(a), :confirm => 'Are you sure you wish to delete this information?', :method => :destroy  %>&nbsp;
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @assignments %>
<%= link_to 'New assignment', new_assignment_path %>
