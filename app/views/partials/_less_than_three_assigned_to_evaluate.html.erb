<h1>Applications that still need at least 3 evaluators</h1>
<br />
<table>
  <tr>
    <th>Project Name</th>
    <th>Field</th>
    <th>Number of Evaluators</th>
    <th></th>
    <th></th>
  </tr>

<% @applications = @applications.paginate :page => params[:page], :per_page => 10 %>
<% @applications.each do |a| %>
  <tr>
    <td><%=h a.application_name%></td>
    <td><%=h a.field_name%></td>
    <td><%= Assignment.where(:application_id => a.id).count %></td>
    <td><%#= link_to image_tag("icons/add_dg.gif", :border => 0), new_assignment_path  %>&nbsp;</td>
    <td><%= link_to image_tag("icons/edit_dg.gif", :border => 0), edit_assignment_path(a) %>&nbsp;</td>

    <!-- TODO if can delete -->
    <%#= link_to image_tag("icons/delete_dg.gif", :border => 0), assignment_path(a), :confirm => 'Are you sure you wish to delete this information?', :method => :destroy  %>&nbsp;
  </tr>
<% end %>
</table>

